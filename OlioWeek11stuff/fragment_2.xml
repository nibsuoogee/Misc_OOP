<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="50dp">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="266dp"
        android:layout_height="match_parent"
        android:background="#F3F3F3" />

    <ScrollView
        android:layout_width="264dp"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:text="TextView"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="48sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/input_lock" />

            <TextView
                android:id="@+id/textViewFont"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/font_size"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/seekBarFont"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:max="10"
                android:progress="3" />

            <TextView
                android:id="@+id/textViewWidth"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/width"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/seekBarWidth"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:max="10"
                android:progress="3" />

            <TextView
                android:id="@+id/textViewHeight"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/height"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/seekBarHeight"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:max="10"
                android:progress="3" />

            <TextView
                android:id="@+id/textViewLines"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/lines"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/seekBarLines"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:max="10"
                android:progress="3" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/the_display_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextDisplay"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="@string/display_text"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewLang"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/language"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="173dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>